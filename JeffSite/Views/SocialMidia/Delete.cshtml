@model SocialMidia
@{
    Layout = "_LayoutAdmin";
}
<br>
<h1>@ViewData["Title"]</h1>
<br>

<form asp-action="Delete">
    
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Name)</label>
        <input type="text" class="form-control" asp-for="Name" readonly>
    </div>
    <div class="form-group">
        <label>@Html.DisplayNameFor(Model => Model.Url)</label>
        <input type="text" class="form-control" asp-for="Url" readonly>
    </div>
    <a asp-controller="Admin" asp-action="AdminHome">Voltar</a>
    <button class="btn btn-danger">Excluir</button>
</form>